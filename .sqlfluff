[sqlfluff]
# Dialetto SQL compatibile con PostgreSQL
dialect = sqlite

[sqlfluff:rules]
lint_templated_files = true
max_line_length = 120

[sqlfluff:rules:L010]
capitalisation_policy = "upper"

[sqlfluff:rules:L011]
aliasing = "explicit"

[sqlfluff:rules:L014]
extended_capitalisation_policy = "consistent"

[sqlfluff:rules:L016]
comma_style = "trailing"

[sqlfluff:rules]
L009 = "off"

[sqlfluff:rules:L029]
unquoted_identifiers_policy = "consistent"

[sqlfluff:rules:L036]
select_wildcard_expansion = true

